{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": [
            "es2018",
            "es2017",
            "dom",
            "es6"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ]
        },
        "moduleResolution": "node",
        "removeComments": false
    },
    "include": [
        "../src",
        "**/*"
    ],
    "files": [
        "./app/main.ts"
    ],
    "exclude": [
        "../src/node_modules",
        "node_modules",
        "platforms"
    ]
}